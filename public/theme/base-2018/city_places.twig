{% set city_name = citySlug %}
{% extends 'partials/_master.twig' %}
{#{% set meta_title = record.meta_title ? record.meta_title : record.title %}#}
{#{% set meta_description = record.meta_description %}#}
{#{% set meta_keywords = record.meta_keywords %}#}
{% block main %}
    <section class="section main">
        <div class="container">
            <div class="columns">
                {% include 'partials/_side_categories.twig' %}
                <div class="column  p-t-0">
                    <div class="columns is-multiline is-variable bd-klmn-columns is-1 is-flex place-list-items">
                        {% for place in places %}
                            {% include '_place_on_city_page.twig' %}
                        {% endfor %}
                    </div>

                    {% setcontent entries = 'entries' where { cities: city_name }  %}

                    {% if entries | length > 0 %}
                        <div class="container">
                            {% for entry in entries %}
                                <div>{{ entry.body | raw }}</div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock main %}
