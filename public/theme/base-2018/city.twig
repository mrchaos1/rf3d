{% extends 'partials/_master.twig' %}

{% block main %}
    {% set city_name = app.request.get('name') %}
    <section class="section main">
        <div class="container">
            <div class="columns">
                {% include 'partials/_side_categories.twig' %}
                <div class="column">

                    <div class="columns is-multiline is-variable bd-klmn-columns is-1">
                        {% setcontent places = "places" where { cities: city_name } allowpaging limit 10 %}
                        {% for place in places %}
                            {% include '_place.twig' %}
                        {% endfor %}
                    </div>
                    {{ pager('places') }}

                </div>
            </div>
        </div>
    </section>
{% endblock main %}
